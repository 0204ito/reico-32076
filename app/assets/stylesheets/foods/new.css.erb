.food-page{
  display: flex;
  background-image: url("<%= asset_path('cook1.png') %>");
  background-size: cover;
  width: 100%;

}
.new-food{
  margin: 10px auto;
}
.new-food-title{
  margin: 10px;
  color: white;
  font-size: 20px;
}
.new-foodsub-title{
  color: white;
  font-size: 15px;
  margin-bottom: 10px;
}
.food-spece{
width: 100%;
background-color: white;
border-radius: 15px;
padding: 25px;
}


table{
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
}


table tr{
  border-bottom: solid 1px #eee;
  cursor: pointer;
}

.caption, th {
color: rgb(221, 50, 50);
padding-left: 12px;

}
.form-control{
  border: 1px solid white;
  border-radius: 3px;
}
.form-control {
  padding: 5px;
  margin: 10px;
}


.text-center{
   display: flex;
 justify-content: flex-end ;
}

.btn-btn-primary{
  width: 200px;
  padding: 15px;
  border: 1px solid white;
  border-radius: 3px;
  color: white;
  background-color: rgb(228, 154, 57);
  display: block;
  margin-top: 20px;
}