.food-page{
  display: flex;
  background-image: url("<%= asset_path('cook1.png') %>");
  background-size: cover;
  width: 100%;
}
.new-food{
  margin: 10px auto;

}
.new-food-title{
  margin: 10px 0 10px 30px;
  color: white;
  font-size: 20px;
}
.new-foodsub-title{
  color: white;
  font-size: 15px;
  margin-bottom: 10px;
  margin-left: 30px;
}
.food-spece{
  width: calc(100vw - 220px);
  background-color: white;
  border-radius: 15px;
  padding: 25px;
}


.form-table tr{
  border-bottom: solid 1px #eee;
  cursor: pointer;
}
.form-control{
  border: 1px solid white;

}



.text-center{
  display: flex;
 justify-content: flex-end ;
}

.btn-btn-primary{
  width: 200px;
  padding: 15px;
  border: 1px solid white;
  border-radius: 3px;
  color: white;
  background-color: rgb(228, 154, 57);
  display: block;
  margin-top: 20px;
}



<%# 食材表示 %>
.java_food{
  background-color: white;
   margin: 50px 0 30px 0;
  padding: 20px;
  border-radius: 15px;
  overflow: scroll;
  height: 380px;
}