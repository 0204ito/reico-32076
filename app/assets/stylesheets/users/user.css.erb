.contents-row{
    height: 800px;
    background-image: url("<%= asset_path('cook1.png') %>");
    display: flex;
    justify-content: center;
    width: 100%;
}
.new-sing{
  font-size: 40px;
  color:rgb(240, 189, 123);
  padding-top:30px;
}
.new_user{
  width: 600px;
  padding-left: 60px;
}
.input-default{
  width: 500px;
  padding: 10px;
  border: 1px solid white;
  display: block;
}
.send {
  width: 200px;
  margin: 20px 300px;
  padding: 15px;
  border: 1px solid white;
  border-radius: 3px;
  color: white;
  background-color: rgb(228, 154, 57);
  display: block;
}
 /* タブレット表示時 */
@media (max-width: 1024px) {
}

 /* 中間表示時 */
@media (max-width: 640px) {
.new-sing{
  font-size: 200%;
  padding-top: 8%;
  margin-left: 10%;
}
}
 /* スマホ表示時 */
@media (max-width: 599px) {
.container{
  width: 100%;
}
.new-sing{
  font-size: 200%;
  padding-top: 8%;
  margin-left: 10%;
}
.new_user{
  width: 100%;
  padding-left: 0px;
}
.field {
 margin-left: 10%;
}
.input-default{
  width: 80%;
  margin-left: 10%;
  padding: 10px;
  border: 1px solid white;
  display: block;
}
.actions{
  margin-left: 10%;
  width: 80%;
}
.send {
  width: 150px;
  margin: 5% 0% 0% 0%;
  padding: 13px;
  border: 1px solid white;
  border-radius: 3px;
  float: right;
}
}

