.main {
  background-image: url("<%= asset_path('cook1.png') %>");
  height: 800px;
  background-size: cover;
  display: flex;
  justify-content: space-around;
}

.main-box{
  display: inline-block;
  font-size: 1.0em;
  color: #fff;
  height: 95vh;
  margin-top: 40px;
}
.main-title{
  font-size: 40px;
  padding-bottom: 10px;
}
.subtitle-title{
  font-size: 20px;
  line-height: 40px;
}
.mini-title{
  font-size: 23px;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 17px;
  margin-top: 7px;
}
.end-title{
  font-size: 30px;
  margin-top: 7px;
}

.new_reico__btn{
    display: inline-block;
    padding: 0.7em 0.7em;
    font-size: 1.7em;
    color: white;
    text-decoration: none;
    user-select: none;
    border: 1px white solid;
    border-radius: 3px;
    transition: 0.4s ease;
    background-color:#87CEFA ;
  }
 .new_reico__btn:hover{
  color: #fff;
  background: #ffbbd8;
  border: 1px solid #ffbbd8;
}

 /* タブレット表示時 */
@media (max-width: 1024px) {

.main-title{
  font-size: 30px;
  padding-bottom: 8px;
}
.subtitle-title{
  font-size: 17px;
  line-height: 40px;
}
.mini-title{
  font-size: 20px;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 15px;
  margin-top: 7px;
}
.end-title{
  font-size: 25px;
  margin-top: 7px;
}
.new_reico__btn{
    display: inline-block;
    padding: 0.9em 0.7em;
    font-size: 1.4em;
    color: white;
    text-decoration: none;
    user-select: none;
    border: 1px white solid;
    border-radius: 3px;
    transition: 0.4s ease;
    background-color:#87CEFA ;
  }
}

 /* スマホ表示時 */
@media (max-width: 599px) {

.main-box{
  font-size: 1.0em;
  color: #fff;
  height: 150px;
  margin-top: 50px;
  margin: 50px;
}

.main-title{
  font-size: 22px;
  padding-bottom: 8px;
}
.subtitle-title{
  font-size: 15px;
}
.mini-title{
  font-size: 18px;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 14px;
  margin-top: 7px;
}
.end-title{
  font-size: 20px;
  margin-top: 7px;
}

.new_reico__btn{
    display: inline-block;
    padding: 0.9em 0.7em;
    font-size: 1.1em;
    color: white;
    text-decoration: none;
    user-select: none;
    border: 1px white solid;
    border-radius: 3px;
    transition: 0.4s ease;
    background-color:#87CEFA ;
    margin: 30px 0 0 380px;
  }
 .new_reico__btn:hover{
  color: #fff;
  background: #ffbbd8;
  border: 1px solid #ffbbd8;
}


