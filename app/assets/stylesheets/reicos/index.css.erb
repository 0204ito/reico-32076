.main {
  background-image: url("<%= asset_path('cook1.png') %>");
  height: 800px;
  background-size: cover;
  display: flex;
  justify-content: space-around;
}

.main-box{
  display: inline-block;
  font-size: 1.0em;
  color: #fff;
  height: 95vh;
  margin-top: 5%;
  padding-left: 0;
}
.main-title{
  font-size: 40px;
  padding-bottom: 10px;
}
.subtitle-title{
  font-size: 20px;
  line-height: 40px;
}
.mini-title{
  font-size: 23px;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 17px;
  margin-top: 7px;
}
.end-title{
  font-size: 30px;
  margin-top: 7px;
}

.new_reico__btn{
  display: inline-block;
  padding: 0.7em 0.7em;
  font-size: 1.7em;
  color: white;
  text-decoration: none;
  user-select: none;
  border: 1px white solid;
  border-radius: 3px;
  transition: 0.4s ease;
  background-color:#87CEFA ;
}
.new_reico__btn:hover{
color: #fff;
background: #ffbbd8;
border: 1px solid #ffbbd8;
}

 /* タブレット表示時 */
@media (max-width: 1024px) {
.main-box{
  width: 80%;
  height: 40%;
  padding-left: 10%;
}
.main-title{
  font-size: 180%;
  padding-bottom: 1%;
}
.subtitle-title{
  font-size: 115%;
}
.mini-title{
  font-size: 125%;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 100%;
  margin-top: 7px;
}
.end-title{
  font-size: 150%;
  margin-top: 7px;
}
.new_reico__btn{
  display: inline-block;
  padding: 0.9em 0.7em;
  font-size: 1.4em;
  color: white;
  text-decoration: none;
  user-select: none;
  border: 1px white solid;
  border-radius: 3px;
  transition: 0.4s ease;
  background-color:#87CEFA ;
  margin: 5% 0 0 68% ;
}
}
 /* 中間表示時 */
@media (max-width: 640px) {
.main-title{
  font-size: 130%;
}
.subtitle-title{
  font-size: 100%;
  line-height: 40px;
}
.mini-title{
  font-size: 130%;
  line-height: 40px;
  margin-top: 40px;
}
.text1{
  font-size: 90%;
  margin-top: 7px;
}
.end-title{
  font-size: 120%;
  margin-top: 7px;
}
.new_reico__btn{
  display: inline-block;
  padding: 0.6em ;
  font-size: 1.5em;
  color: white;
  text-decoration: none;
  user-select: none;
  border: 1px white solid;
  border-radius: 3px;
  transition: 0.4s ease;
  margin: 5% 0 0 55% ;
}
.new_reico__btn:hover{
color: #fff;
background: #ffbbd8;
border: 1px solid #ffbbd8;
}
}
 /* スマホ表示時 */
@media (max-width: 480px) {
.end-title{
  font-size: 110%;
  margin-top: 7px;
}
}
