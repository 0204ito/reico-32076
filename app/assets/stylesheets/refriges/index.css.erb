.menu__btn{
  display: inline-block;
  padding: 1.2em 2.6em;
  font-size: 1.0em;
  color: #87CEFA;
  text-decoration: none;
  user-select: none;
  border: 1px #87CEFA solid;
  border-radius: 3px;
  transition: 0.4s ease;
  margin:0 10px;
}
.menu__btn:hover{
  color: #fff;
  background: #87CEFA;
}
