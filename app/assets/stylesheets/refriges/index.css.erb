
/*ここから下left部分*/

.mainpage {
  display: flex;
  background-image: url("<%= asset_path('cook1.png') %>");
  background-size: cover;
  height: 800px;
}
.page_left {
  width: 350px;
  height: 100vh;
  display: flex;
  justify-content: center;
}
.sabu_left{
  margin: 70px 0 ;
  display: flex;
  flex-direction: column;
   overflow: scroll; 
}

.name{
  display: flex;
  align-items:flex-end;
  margin-bottom:30px;
}
.name_left{
  padding-left:10px;
}
.name_left a {
  font-size: 25px;
  color: #e4faff;
  text-decoration: none;
}
.name_left a:hover {
  text-decoration: underline;
}
.name_end{
  font-size: 20px; 
  color: #e4faff;
  padding-left: 10px;
}

.refrige__btn{
  display: inline-block;
  padding: 1.2em 2.6em;
  font-size: 1.0em;
  background-color: #e4faff;
  text-decoration: none;
  user-select: none;
  border-radius: 3px;
  transition: 0.4s ease;
  margin:0 10px 20px 10px;
  text-align: center;
}
.refrige__btn:hover{
  background: #ffbbd8;
}

.refrige_name a {
  text-decoration: none;
  color: #71c1f3;
  font-size: 1em;
}
.refrige_name a :hover{
  color: white;
}
.sabu_refrige--title{
  color: white;
  font-size: 20px;
  margin: 10px 0 10px 30px;
}

