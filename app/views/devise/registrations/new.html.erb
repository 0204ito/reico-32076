
<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="left_bar">
            <div class="nav__left">
              <%= link_to image_tag("logo.png", class: :logo), root_path %>
            </div>
          </div>

           <div class="right_bar">
           </div>
        </div>
      </div>
</header>


<div class="contents-row">
  <div class="container">
    <h2 class="new-sing">Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object%>
      <div class="form-group">
        <div class="field">
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">(必須)</span>
        </div>
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) rei子", maxlength:"40" %>
     </div>

      <div class="form-group">
        <div class="field">
         <label class="form-text">メールアドレス</label>
         <span class="indispensable">(必須)</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      
      <div class="form-group">
        <div class="field">
          <label class="form-text">パスワード   ※英字と数字の両方を含めて設定してください</label>
          <span class="indispensable">(必須)</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

     <div class="form-group">
      <div class="field">
         <label class="form-text">パスワード確認</label>
         <span class="indispensable">(必須)</span>
      </div>
       <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
     </div>
     
     <div class="actions">
        <%= f.submit "Sign up",class:"send" %>
     </div>
    <% end %>
  </div>
</div>

