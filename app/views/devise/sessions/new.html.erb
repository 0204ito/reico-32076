
<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%#= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
        </div>
      </div>
</header>

<div class="contents-row">
  <div class="container">
    <h2 class="new-sing">Log in</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="field">
         <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
      </div>
      
      <div class="form-group">
        <div class="field">
          <label class="form-text">パスワード</label>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

     <div class="form-group">
      <div class="field">
         <label class="form-text">パスワード(確認)</label>
      </div>
       <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
     </div>
     
     <div class="actions">
        <%= f.submit "Log in",class:"send" %>
     </div>
    <% end %>
  </div>
</div>