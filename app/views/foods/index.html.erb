<header class="header">
    <div class="inner">
      <div class="nav">
        <div class="left_bar">
          <div class="nav__left">
            <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
        </div>
        <div class="right_bar">
          <div class="menu__right"> 
             <%= link_to "食材追加", new_refrige_food_path, class: :menu__btn %>
          </div> 
          <div class="menu__right"> 
             <%= link_to "検索・編集", root_path, class: :menu__btn %>
          </div>
          <div class="menu__right"> 
            <%= link_to "リクエスト", root_path, class: :menu__btn %>
          </div>
        </div>
      </div>
    </div>
</header>

<div class="mainpage">
     <%# <%= ここから画面left %> 
    <div class="page_left">
       <div class="sabu_left">
            <%# <%= ここから冷蔵庫名 一覧 %> 
          <div class="name">
            <div class="name_left">
              <%= link_to current_user.nickname, edit_user_path(current_user) %>
            </div>
             <p class="name_end">の reico</p>
          </div>
          <% current_user.refriges.each do |refrige| %>
            <div class="refrige__btn">
              <div class="refrige_name">
                <%= link_to refrige.refrige_name, refrige_foods_path(refrige.id) %>
              </div>
            </div>
          <% end %>
            <%# <%= ここまで冷蔵庫名 一覧 %>
       </div>
    </div>
    <%# <%= ここまで画面left %> 

    <%# <%= ここから画面right %> 
  <div class="page_right">
    <div class="sabu_right">
     <%# <%= ここから食材一覧 %>
      <div class="in_right">
          <div class="refrige_right">
           <%= link_to @refrige.refrige_name, edit_refrige_path(@refrige.id) %>
          </div>
             <table class="food_table">
                 <tr>
                  <th>食材名</th>
                  <th>商品名</th>
                  <th>カテゴリー</th>
                  <th>購入日</th>
                  <th>賞味期限</th>
                  <th>購入店</th>
                 </tr>
                <% @foods.each do |food| %>
                 <tr class="food" data-id=<%= food.id %> data-check=<%= food.checked %>>
                    <td class="food_name" id="lists" > <%= food.food_name %></td>
                    <td class="product_name" id="lists"><%= food.product_name %></td>
                    <td class="category" id="lists"><%= food.category.name %></td>
                    <td class="purchase_date" id="lists"><%= food.purchase_date %></td>
                    <td class="sell_by" id="lists"><%= food.sell_by %></td>
                    <td class="shop" id="lists"><%= food.shop %></td>
                 </tr>
                <% end %>
              </table>

      </div>
     <%# <%= ここまで食材一覧 %> 
    </div>
  </div>
</div>
<%# <%= ここまで画面right %> 

