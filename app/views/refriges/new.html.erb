<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
        </div>
      </div>
</header>


<div class="contents-row">
  <div class="container">
     <h2 class="new-sing">My reico up</h2>
     <p class="newreico-title">あなたの冷蔵庫を作りましょう！</p>
     <%= form_with model: @refrige,id: 'new_user', class: 'new_user', local: true do |f| %> 

        <%#エラーメッセージを表示させる記述が必要%>
        <div class="form-group">
          <div class="field">
            <label class="form-text">My reico name</label>
            <span class="indispensable">（必須）</span>
          </div>
          <%= f.text_area :refrige_name, class:"input-default", id:"refrige_name", placeholder:"例) ハナコreico", maxlength:"40" %>
        </div>

        <div class="form-group">
          <div class="field">
            <label class="form-text">メンバー</label>
          </div>
          <div class="user-group">
            <select nickname="refrige[user_ids][]">
              <option value="">チャットするユーザーを選択してください</option>
              <% User.where.not(id: current_user.id).each do |user| %>
                <option value=<%= user.id %>><%= user.nickname %></option>
              <% end %>
            </select>
             <input nickname="refrige[user_ids][]" type="hidden" value=<%= current_user.id %>>
         </div>
        </div>
        <div class="actions">
          <%= f.submit "Up",class:"send" %>
        </div>
     <% end %> 
  </div>
</div>
